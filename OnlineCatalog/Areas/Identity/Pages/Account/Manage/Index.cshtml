@page
@model IndexModel
@{
    ViewData["Title"] = @Localizer["Profile"];
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="genericPageTitleText">
    <h3>@ViewData["Title"]</h3>
</div>

<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-5 col-7 inputStyle">
                <input asp-for="Username" type="text" readonly="" />
                <label>@Localizer["Username"]</label>
            </div>
           @* <div class="form-group mt-5 inputStyle">
                <input asp-for="Input.Email" type="text" required="" aria-required="true" />
                <label>@Localizer["Email"]</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>*@
           <div class="form-group col-7 mt-4 inputStyle">
               <input asp-for="Input.PhoneNumber" type="text" required=""/>
               <label>@Localizer["PhoneNumber"]</label>
               <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
           </div>

           <div class="buttons">
                <button id="update-profile-button" type="submit" class="btn">@Localizer["Save"]</button>
           </div>
            
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
