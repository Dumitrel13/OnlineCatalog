@page
@model GenerateRecoveryCodesModel
@{
    ViewData["Title"] = @Localizer["Generate two-factor authentication (2FA) recovery codes"];
    ViewData["Name"] = @Localizer["Generate (2FA) recovery codes"];
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />

<div class="genericPageTitleText">
    <h3>@ViewData["Title"]</h3>
</div>

<div class="alert alert-warning" role="alert">
    <p>
        <span class="glyphicon glyphicon-warning-sign"></span>
        <strong class="tableText">@Localizer["Put these codes in a safe place."]</strong>
    </p>
    <p class="tableText">
        @Localizer["If you lose your device and don't have the recovery codes you will lose access to your account."]
    </p>
    <p>
        @Localizer["Generating new recovery codes does not change the keys used in authenticator apps. If you wish to change the key used in an authenticator app you should"] <a asp-page="./ResetAuthenticator">@Localizer["reset your authenticator keys"].</a>
    </p>
</div>
<div>
    <form method="post" class="buttons">
        <button class="btn" type="submit">@Localizer["Generate (2FA) recovery codes"]</button>
    </form>
</div>
