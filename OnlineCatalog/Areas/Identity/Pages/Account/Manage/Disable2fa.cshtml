@page
@model Disable2faModel
@{
    ViewData["Title"] = @Localizer["Disable two-factor authentication"] + " (2FA)";
    ViewData["Name"] = @Localizer["Disable"] + " (2FA)";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />

<div class="genericPageTitleText">
    <h3>@ViewData["Title"]</h3>
</div>

<div class="alert alert-warning" role="alert">
    <p class="tableText">
        <strong>@Localizer["This action only disables"] 2FA.</strong>
    </p>
    <p>
        @Localizer["Disabling 2FA does not change the keys used in authenticator apps. If you wish to change the key used in an authenticator app you should"] <a asp-page="./ResetAuthenticator">@Localizer["reset your authenticator keys"].</a>
    </p>
</div>

<div>
    <form method="post" class="buttons">
        <button class="btn" type="submit">@Localizer["Disable"] 2FA</button>
    </form>
</div>
