@model ApplicationRole

<h3 class="my-5">
	@Model.Name
</h3>


<div class="col-md-8">

	<div class="col-5">
		<label asp-for="Name" class="form-label"></label>
		<input asp-for="Name" class="form-control" readonly />
	</div>

	<div class="mt-3">

		<div class="btn-group" role="group">

			<form asp-action="Delete" method="post">
				<input type="submit" class="btn btn-danger" value="@Localizer["Confirm"]" />
			</form>
			&nbsp;
			<a class="btn btn-secondary" asp-action="Index">@Localizer["Back"]</a>

		</div>

	</div>
</div>