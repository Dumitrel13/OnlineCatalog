@model Subject

<div class="col-6">
    <div class="row g-2">

        <div class="col-5 inputStyle">
            <input asp-for="Name" type="text" required="" />
            <label>@Localizer["Name"]</label>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

    </div>

    <div class="mt-3">
        <div class="buttons">
            <button type="submit" class="btn">@ViewData["BtnText"]</button>
        </div>
    </div>

</div>