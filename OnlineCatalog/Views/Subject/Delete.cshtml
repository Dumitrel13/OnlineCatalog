@model Subject

<h3 class="my-5 genericPageTitleText">
	@Localizer["Are you sure you want to delete this subject"]: @Model.Name?
</h3>

<div class="col-md-8">
    <div class="mt-3">

		<div class="btn-group" role="group">

            <form asp-action="Delete" class="buttons" method="post">

                @Html.HiddenFor(model => model.SubjectId)

                <button type="submit" class="btn">@Localizer["Confirm"]</button>
            </form>
			
            <div class="ms-4 tableButton">
                <a class="btn btn-secondary" asp-action="Index">@Localizer["Back"]</a>
            </div>
            

		</div>

	</div>
</div>