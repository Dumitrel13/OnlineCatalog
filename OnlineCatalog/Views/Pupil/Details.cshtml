@model PupilViewModel

@{
    ViewData["IsReadonly"] = true;
    ViewData["Name"] = "Edit pupil";
}
<form asp-action="Details" asp-controller="Pupil" method="get" role="form">
    <h3 class="my-5">
        @Localizer["EditPupil"]
    </h3>

    @Html.HiddenFor(model => model.Pupil.Id)

    <div class="col-6">
        <div class="row g-2">
            <partial name="_AddAndEdit" for="Pupil" view-data="ViewData" />
        </div>

        <div class="form-group">
            <label asp-for="Pupil.Classroom" class="form-label"></label>
            <input asp-for="SelectedClassroom" class="form-control" readonly />
        </div>
       

        <div class="mt-3">
            <div class="col-md-offset-2 col-md-5">
                <input type="submit" class="btn btn-secondary" value="@Localizer["SaveChanges"]" />
            </div>
        </div>
    </div>

</form>

