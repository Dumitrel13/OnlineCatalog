@model IEnumerable<Classroom>

@{
    ViewData["Name"] = "Subjects";
}

<div class="my-4 tableButton">
    <a class="btn" asp-area="" asp-controller="Classroom" asp-action="Add"><i class="fa-solid fa-plus"></i> @Localizer["AddClassroom"]</a>
</div>

