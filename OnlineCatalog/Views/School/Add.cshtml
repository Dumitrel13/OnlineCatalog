@model School

<form asp-action="@ViewData["ActionName"]" asp-controller="School" method="post" role="form">
    
    <div class="mt-3 genericPageTitleText">
        @if (@Model.SchoolId == 0)
        {
            @Localizer["RegisterANewSchool"]
        }
        else
        {
            @Localizer["Edit"]
        }
    </div>
    
    @Html.HiddenFor(model => model.SchoolId)

    <div class="mt-5 col-5">
        
        <div class="form-group col-5 inputStyle">
            <input asp-for="@Model.Name" type="text" required="" oninvalid="this.setCustomValidity('@Localizer["Please enter a value for this field!"]')"
                   oninput="setCustomValidity('')" />
            <label>@Localizer["LastName"]</label>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group col-5 inputStyle">
            <input asp-for="Address" type="text" required="" oninvalid="this.setCustomValidity('@Localizer["Please enter a value for this field!"]')"
                   oninput="setCustomValidity('')" />
            <label>@Localizer["Address"]</label>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        
        <div class="mt-4 buttons">
            @if (@Model.SchoolId == 0)
            {
                <button class="btn" type="submit">@Localizer["RegisterSchool"]</button>
            }
            else
            {
                <button class="btn" type="submit">@Localizer["SaveChanges"]</button>
            }
        </div>

    </div>

</form>