@model SchoolViewModel

@if (!@Model.Message.IsNullOrEmpty())
{
    <div class="col-3 tableButton">
        <a class="btn" asp-action="Add" asp-controller="School">@Localizer["RegisterANewSchool"]</a>
    </div>
}

@if (!@Model.Message.IsNullOrEmpty())
{
    <div class="mt-5 genericPageTitleText">
        @Model.Message
    </div>
}
else
{

    <div class="col-5">

        <div class="mt-3 genericPageTitleText">
            @Localizer["SchoolDetails"]
        </div>

        <div class="mt-5">

            <div class="form-group col-5 inputStyle">
                <input asp-for="@Model.School.Name" type="text" readonly="" />
                <label>@Localizer["Name"]</label>
            </div>

            <div class="form-group col-5 inputStyle">
                <input asp-for="@Model.School.Address" type="text" readonly="" />
                <label>@Localizer["Address"]</label>
            </div>

            <div class="col-5 tableButton">
                <a class="btn" asp-action="Edit" asp-controller="School" asp-route-id="@Model.School.SchoolId">@Localizer["Edit"]</a>
            </div>

        </div>
    </div>
}
